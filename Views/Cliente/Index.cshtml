@model IEnumerable<MaestroDetalle_CRUD.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1>Clientes</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
